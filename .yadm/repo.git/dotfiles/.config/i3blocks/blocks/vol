#!/bin/bash

#â–‘â–ˆâ–’
#ðŸ”‡  ðŸ”ˆ  ðŸ”‰  ðŸ”Š 
#echo "â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘ ðŸ•ª "

VOL=$(amixer -D pulse sget Master | awk '/Left:/ {print $5}')
STAT=$(amixer -D pulse sget Master | awk '/Left:/ {print $6}')
#echo "$VOL $STAT ðŸ•ª"
if [ "$STAT" = "[on]" ]; then
	if [ "${#VOL}" -gt "5" ]; then
		echo "ðŸ”Š  â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ"
	elif [ "${VOL:1:2}" -gt "90" ]; then
		echo "ðŸ”Š  â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ"
	elif [ "${VOL:1:2}" -gt "80" ]; then
		echo "ðŸ”Š  â–‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ"
	elif [ "${VOL:1:2}" -gt "70" ]; then
		echo "ðŸ”Š  â–‘â–‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ"
	elif [ "${VOL:1:2}" -gt "60" ]; then
		echo "ðŸ”Š  â–‘â–‘â–‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ"
	elif [ "${VOL:1:2}" -gt "50" ]; then
		echo "ðŸ”Š  â–‘â–‘â–‘â–‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ"
	elif [ "${VOL:1:2}" -gt "40" ]; then
		echo "ðŸ”Š  â–‘â–‘â–‘â–‘â–‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆ"
	elif [ "${VOL:1:2}" -gt "30" ]; then
		echo "ðŸ”Š  â–‘â–‘â–‘â–‘â–‘â–‘â–ˆâ–ˆâ–ˆâ–ˆ"
	elif [ "${VOL:1:2}" -gt "20" ]; then
		echo "ðŸ”‰  â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–ˆâ–ˆâ–ˆ"
	elif [ "${VOL:1:2}" -gt "10" ]; then
		echo "ðŸ”‰  â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–ˆâ–ˆ"
	elif [ "${VOL:1:2}" -gt "0" ]; then
		echo "ðŸ”‰  â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–ˆ"
	else
		echo "ðŸ”ˆ  â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘"
	fi
else
	echo "ðŸ”‡  â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘â–‘"
fi
exit 0
